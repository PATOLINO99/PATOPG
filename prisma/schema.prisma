generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SiteConfig {
  id              Int    @id @default(1)
  heroTitle       String
  heroDescription String
  primaryColor    String @default("#2563eb") // Blue-600 default
  welcomeText     String @default("Bem-vindo Ã  nossa loja")
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  price       String // Visual price (e.g., "R$ 49,90")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
